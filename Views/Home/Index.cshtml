@model List<CarRentals.Models.Car.CarViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{

    <div class="container">
        <h3 class="display-4">All cars</h3>
        <div class="row">

            @foreach (var car in Model)
            {
                <div class="col-md-4">
                    <partial name="_carThumbnail" model="@car" />
                    <div class="btn-group">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Car" asp-action="GetCarDetail" asp-route-id="@car.Id"
                           class="btn btn-sm btn-outline-secondary">View details</a>
                                <a asp-controller="Booking" asp-action="BookCar" asp-route-id="@car.Id"
                           class="btn btn-sm btn-outline-secondary">Book Car</a>
                                <a asp-controller="Comment" asp-action="Create" asp-route-id="@car.Id" class="btn btn-success btn-sm">
                                    Add Comment
                                </a>
                            </div>
                        </div>
                    </div>
                 
                </div>
                @if (car.Comments.Count == 0)
                {
                    <p>Be the first to comment on this</p>
                }

                @if (car.Comments.Count != 0)
                {
                    <div class="card mt-3 mb-3">
                        <div class="card-header bg-light">
                            Comments:
                        </div>
                        <ul class="list-group list-group-flush">

                            @foreach (var comment in car.Comments)
                            {
                                <li class="list-group-item">
                                    @comment.CommentText
                                    <span class="badge bg-secondary">@comment.UserName</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }

        </div>
    </div>
}
