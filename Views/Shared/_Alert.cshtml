@{
    var status = (bool)ViewData["Status"];
    var statusColor = status == true ? "alert-success" : "alert-danger";
    string controllerName = ViewData["ControllerName"] as string;
    string actionName = ViewData["ActionName"] as string;
}


@if (Model is null)
{
    <div class="alert @statusColor" role="alert">@ViewData["Message"]</div>
    <hr />
    <a asp-controller="@controllerName" asp-action="@actionName" class="btn btn-outline-secondary">Go back</a>
}