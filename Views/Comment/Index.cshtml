@model List<CarRentals.Models.Comment.CommentViewModel>

@{
    ViewData["Title"] = "Comment List";
    int count = 1;
}

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Comment Text</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td scope="row">@item.CommentText</td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}

