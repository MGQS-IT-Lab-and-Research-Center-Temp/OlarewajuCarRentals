@model CarRentals.Models.Car.CarViewModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageURL) ? "/images/noimage.png" : Model.CoverImageURL)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Name) ? "Name is not available" : Model.Name)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.PlateNumber) ? "PlateNumeber is not availabe" : Model.PlateNumber)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-route="carDetailsRoute" asp-route-id="@Model.Id"
                   class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted"> Model.Price</small>
        </div>
    </div>
</div>